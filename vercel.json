{
    "version": 2,
    "builds": [
        { "src": "main.py", "use": "@now/python" },
        { "src": "/public/**", "use": "@now/static"}
    ],
    "routes": [
        { "handle": "filesystem" },
        { "src": "/", "dest": "/public/index.html" },
        { "src": "/favicon.ico", "dest": "/public/favicon.ico" },
        {
            "src": "^(/.*)",
            "methods": ["GET", "HEAD"],
            "dest": "main.py",
            "continue": true
        }
    ],
    "build": {
        "env": {
            "NOTION_DATA_DIR": "/tmp/notion-py"
        }
    },
    "env": {
        "NOTION_DATA_DIR": "/tmp/notion-py"
    }
}